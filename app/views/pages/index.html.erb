<% if @swrite == [] %>
<% else %>
    <% @write.each do |write| %>
      <strong>Автор: </strong>
    	<%= write.user.email %>  <br />
    	<strong>Назва: </strong> <br>
   		<%= write.title %><br/>
      <strong>Жанр</strong> <br>
      <%= Genre.find_by(id: write.genre_id).try(:name) %> <br>
   		<strong>Перший головний герой: </strong> <br>
   		<%= write.firstheroy %><br/>
   		<strong>Другий головний герой: </strong> <br>
   		<%= write.secondheroy %><br/>
